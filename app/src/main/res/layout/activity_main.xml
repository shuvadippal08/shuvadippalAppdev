<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginBottom="32dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#706E6E"
        android:textSize="30dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/output" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_AllClr"
                android:backgroundTint="@color/btnBackground2"
                android:onClick="onClearClick"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_delete"
                android:backgroundTint="@color/linecolor"
                android:onClick="onBackClick"
                app:icon="@drawable/ic_baseline_backspace_24"
                app:iconTint="@color/btnBackground2"/>

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_persent"
                android:backgroundTint="@color/ACcolor"
                android:onClick="onOperatorClick"
                android:text="%"
                android:textColor="@color/btnBackground2"
                android:textSize="30dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_devide"
                android:backgroundTint="@color/ACcolor"
                android:onClick="onOperatorClick"
                android:text="/"
                android:textColor="@color/btnBackground2"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_7"
                android:onClick="ondigitClick"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_8"
                android:onClick="ondigitClick"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_9"
                android:onClick="ondigitClick"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_multiply"
                android:backgroundTint="@color/ACcolor"
                android:onClick="onOperatorClick"
                android:text="*"
                android:textColor="@color/btnBackground2"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_4"
                android:onClick="ondigitClick"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_5"
                android:onClick="ondigitClick"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_6"
                android:onClick="ondigitClick"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_minus"
                android:backgroundTint="@color/ACcolor"
                android:onClick="onOperatorClick"
                android:text="-"
                android:textColor="@color/btnBackground2"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_1"
                android:onClick="ondigitClick"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_2"
                android:onClick="ondigitClick"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_3"
                android:onClick="ondigitClick"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_plus"
                android:backgroundTint="@color/ACcolor"
                android:onClick="onOperatorClick"
                android:text="+"
                android:textColor="@color/btnBackground2"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_AC"
                android:backgroundTint="@color/btnBackground2"
                android:onClick="onAllClearClick"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="21dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_0"
                android:onClick="ondigitClick"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_dot"
                android:onClick="ondigitClick"
                android:text="."
                android:textColor="@color/black"
                android:textSize="25dp" />

            <com.google.android.material.button.MaterialButton
                style="@style/digitButton"
                android:id="@+id/btn_equal"
                android:backgroundTint="@color/btnBackground2"
                android:onClick="onEqualClick"
                android:text="="
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="242dp" />
</androidx.constraintlayout.widget.ConstraintLayout>


